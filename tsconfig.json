{
    "compilerOptions": {
        "target": "es5",
        "module":"es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "strictNullChecks": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
      "src/**/*"
    ]
}

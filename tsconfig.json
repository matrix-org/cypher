{
    "compilerOptions": {
        "target": "es5",
        "module":"es2015",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "lib",
        "strictNullChecks": true,
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
      "src/**/*"
    ]
}
